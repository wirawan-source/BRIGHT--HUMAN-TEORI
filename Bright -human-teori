<script>
    function generatePDF() {
        const element = document.getElementById('capture-area');
        
        // Ambil nilai dari input
        const alamat = document.getElementById('input-alamat').value;
        const konten = document.getElementById('input-konten').value;
        const pesan = document.getElementById('input-pesan').value;

        // Validasi sederhana
        if(!alamat || !pesan) {
            alert("Mohon isi data terlebih dahulu sebelum mengarsipkan.");
            return;
        }

        // Sembunyikan input, tampilkan teks untuk PDF yang rapi
        document.getElementById('display-alamat').innerText = alamat;
        document.getElementById('display-konten').innerText = konten;
        document.getElementById('display-pesan').innerText = pesan;
        
        document.getElementById('input-alamat').style.display = 'none';
        document.getElementById('input-konten').style.display = 'none';
        document.getElementById('input-pesan').style.display = 'none';
        
        document.getElementById('display-alamat').style.display = 'block';
        document.getElementById('display-konten').style.display = 'block';
        document.getElementById('display-pesan').style.display = 'block';
        
        // Sembunyikan tombol saat proses cetak
        const btnContainer = document.querySelector('.btn-container');
        btnContainer.style.display = 'none';

        // Konfigurasi PDF
        const opt = {
            margin:       10,
            filename:     'Eternal-Archive-BrightHuman.pdf',
            image:        { type: 'jpeg', quality: 0.98 },
            html2canvas:  { scale: 2 },
            jsPDF:        { unit: 'mm', format: 'a4', orientation: 'portrait' }
        };

        // Jalankan ekspor
        html2pdf().set(opt).from(element).save().then(() => {
            // Kembalikan tampilan setelah PDF selesai dibuat
            btnContainer.style.display = 'flex';
            alert("Dokumen telah berhasil diarsipkan ke dalam format PDF.");
        });
    }
</script>

